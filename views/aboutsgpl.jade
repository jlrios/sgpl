body(class="full")
  div(class="modal fade" tabindex="-1" role="dialog" id="aboutModal")
    div(class="modal-dialog modal-md")
      div(class="modal-content")
        div(class="modal-header")
          button(type="button" class="close" data-dismiss="modal" aria-label="Cerrar")
            span(aria-hidden='true') &times;
          i(class="fa fa-question-circle fa-3x" aria-hidden="true" style="float: left; padding-right: 10px;")
          h2(class="modal-title") SGPL
          h4(class="modal-title") Sistema para la Gestión de Pedidos en Línea
        div(class="modal-body")
          h1 Acerca de SGPL

        div(class="modal-footer")
          a(href="/") Regresar a Inicio

  script.
    $(window).load(function() {
      $('#aboutModal').modal('show');
    });

    $(document).ready(function() {
      $('#aboutModal').on('hidden.bs.modal', function (e) {
        window.location.href="/";
      });
    });
